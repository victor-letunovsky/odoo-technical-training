<?xml version="1.0"?>
<odoo>
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Estate Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Properties">
                <field name="name"/>
                <field name="property_type_id"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h1>
                        <group>
                            <field name="name" string=""/>
                        </group>
                    </h1>
                    <group>
                        <field name="tag_ids" widget="many2many_tags" string="Tags"/>
                    </group>
                    <group>
                        <group>
                            <field name="property_type_id"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="best_price"/>
                            <field name="selling_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area"/>
                                <field name="garden_orientation"/>
                                <field name="total_area"/>
                                <field name="state"/>
                                <field name="active"/>
                            </group>
                        </page>
                        <page string="Offers">
                            <group>
                                <field name="offer_ids" string="">
                                    <tree>
                                        <field name="price"/>
                                        <field name="partner_id"/>
                                        <field name="validity"/>
                                        <field name="date_deadline"/>
                                        <field name="status"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="salesperson"/>
                                <field name="buyer"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="property_type_id"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>
                <filter name="filter_available" string="Available" domain="[('state', 'in', ['new', 'received'])]"/>
                <filter name="active" string="Inactive" domain="[('active', '=', False)]"/>
                <filter name="active" string="Include Inactive" domain="[('active', 'in', [False, True])]"/>
                <filter name="groupby_postcode" string="Postcode" context="{'group_by': 'postcode'}"/>
            </search>
        </field>
    </record>
</odoo>
